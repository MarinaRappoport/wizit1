<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding5"
    android:id="@+id/changui"
    android:background="@color/BlueLight"
    tools:context="com.with.tourbuild.ChangeGuide">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/GuiPho"
        android:clickable="true"
        android:onClick="contex"
        android:src="@drawable/camera"
        android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="chaName"
        android:id="@+id/guiName"
        android:layout_below="@+id/GuiPho"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/citySpinner"
        android:layout_below="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/ll4"
        android:weightSum="100"
        android:layout_below="@+id/citySpinner"
        android:layout_height="wrap_content">

    <Spinner
        android:layout_width="0dp"
        android:layout_weight="80"
        android:layout_height="wrap_content"
        android:id="@+id/specSpinner"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="0dp"
        android:layout_weight="20"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textColor="#fff"
        android:background="@drawable/nice_button"
        android:onClick="addToSpecs"
        android:id="@+id/addSpec" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginBottom="10dp"
        android:onClick="submit"
        android:background="@drawable/nice_button"
        android:textColor="#fff"
        android:id="@+id/guiSubmit"
       android:layout_below="@+id/langTv"/>



    <TextView
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/specias"
        android:layout_marginBottom="10dp"
        android:hint="Your specializations"
        android:maxLines="10"
        android:clickable="true"
        android:onClick="contex"
        android:scrollbars="vertical"
      android:layout_below="@+id/ll4" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rate: "
        android:layout_marginBottom="10dp"
        android:id="@+id/textView"
        android:layout_below="@+id/descr" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rates number: "
        android:id="@+id/descr"
        android:layout_below="@+id/guiName"/>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/rate"
        android:layout_above="@+id/descr"
        android:layout_alignBaseline="@+id/textView"
        android:layout_toRightOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:textColor="#000"
        android:id="@+id/ratNum"
        android:layout_alignBaseline="@+id/descr"
        android:layout_toRightOf="@+id/descr"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:background="@drawable/nice_button"
        android:textColor="#fff"
        android:onClick="logout"
        android:id="@+id/button3"
        android:layout_below="@+id/guiSubmit" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/ll5"
        android:layout_below="@+id/specias"
        android:layout_height="wrap_content">

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:id="@+id/lanSpinner"
        android:layout_marginBottom="10dp" />


    <Button
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:text="Add"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#fff"
        android:background="@drawable/nice_button"
        android:onClick="addToLangs"
        android:id="@+id/button5" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Languages"
        android:textColor="#000"
        android:clickable="true"
        android:onClick="contex"
        android:layout_marginBottom="10dp"
        android:id="@+id/langTv"
        android:layout_below="@+id/ll5" />


</RelativeLayout>

