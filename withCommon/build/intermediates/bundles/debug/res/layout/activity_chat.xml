<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#e3f2fd"
    android:padding="@dimen/padding5"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.with.tourbuild.Chat">

    <TextView
        android:id="@+id/allMsgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:gravity="bottom"
        android:maxLines="100000"
        android:scrollbars="vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView2"
        android:layout_above="@+id/newMsg" />

    <Button
        android:id="@+id/sendMsg"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#fff"
        android:layout_marginBottom="6dp"
        android:layout_alignParentRight="true"
        android:onClick="send"
        android:background="@drawable/nice_button"
        android:text="SEND"
        android:layout_alignParentBottom="true" />

    <EditText
        android:id="@+id/newMsg"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:ems="10"
        android:hint="Your message"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/sendMsg"
        android:layout_toStartOf="@+id/sendMsg" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:text="Interlocutor:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/nameDialCh"
        android:text="Me:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nameDialCh"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Inter"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/nameInCh"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/nameInCh"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Me"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
