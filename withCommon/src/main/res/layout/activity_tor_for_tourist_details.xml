<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding5"
    android:background="@color/BlueLight"

    tools:context="com.with.tourbuild.TourForTouristDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:textSize="24sp"
        android:id="@+id/tournFu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textColor="#000"
        android:textSize="18sp"
        android:id="@+id/tourdFu"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/imvTourImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price: $"
        android:layout_marginTop="10dp"
        android:textColor="#d50000"
        android:textSize="18sp"
        android:id="@+id/textView12"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tourdFu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#d50000"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        android:id="@+id/tourpFu"
        android:layout_alignTop="@+id/textView12"
        android:layout_toRightOf="@+id/textView12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote"
        android:padding="10dp"
        android:textColor="#fff"
        android:id="@+id/button7"
        android:layout_marginTop="10dp"
        android:onClick="voteT"
        android:background="@drawable/nice_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tourRat"
        android:layout_above="@+id/button7"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/imvTourImage"
        android:src="@drawable/no_image_tour"
        android:layout_below="@+id/tournFu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
