<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="@dimen/padding5"
    android:background="@color/BlueLight"
    tools:context="com.with.tourbuild.AllRequests">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listAllReqs"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You have no requests"
        android:id="@+id/noReq"
        android:layout_alignTop="@+id/listAllTours"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
