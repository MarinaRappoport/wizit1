<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlueLight"
    tools:context="com.with.tourbuild.Calendar">


    <sun.bob.mcalendarview.mCalendarView
        android:layout_width="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/calendar"
        android:layout_below="@+id/pickedDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Unavailable dates marked by grey"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/comm"
        android:weightSum="100">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Number of tourists: "
        android:id="@+id/textView6"
        android:textColor="#000" />

    <EditText
        android:layout_width="0dp"
        android:layout_weight="40"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:layout_toRightOf="@+id/textView6"
        android:id="@+id/amoTour" />


    <Button
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:padding="0dp"
        android:text="Ok"
        android:background="@drawable/nice_button"
        android:onClick="setOk"
        android:textColor="#fff"
        android:id="@+id/button2"
        android:layout_weight="30"
        />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Comment"
        android:layout_marginTop="15dp"
        android:id="@+id/comm"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/pickedDate"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#d50000"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
